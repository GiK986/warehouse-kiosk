<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Създайте файл: res/xml/device_admin.xml
  Този файл дефинира политиките на Device Admin
-->
<device-admin xmlns:android="http://schemas.android.com/apk/res/android">
    <uses-policies>
        <!-- Основни политики за Kiosk Mode -->
        <limit-password />
        <watch-login />
        <reset-password />
        <force-lock />
        <wipe-data />
        
        <!-- Разширени политики (Android 9+) -->
        <encrypted-storage />
        <disable-camera />
        <disable-keyguard />
    </uses-policies>
</device-admin>
