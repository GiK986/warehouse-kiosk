<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WarehouseKiosk" parent="android:Theme.DeviceDefault.NoActionBar">
        <!-- Set the window background to match the Compose theme -->
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- Make the status bar the same color as the background -->
        <item name="android:statusBarColor">@color/backgroundColor</item>

        <!-- Make the navigation bar transparent to enable edge-to-edge -->
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
</resources>
